{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Clipy",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    {
      "identifier": "core:app:allow-set-app-theme",
      "allow": [{ "theme": null }]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",
    "os:default",
    "os:allow-platform",
    "os:allow-arch",
    "os:allow-version",
    "os:allow-os-type",
    "os:allow-family",
    "os:allow-exe-extension",
    "os:allow-locale",
    "os:allow-hostname",
    "process:default",
    "process:allow-exit",
    "process:allow-restart",
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$VIDEO/**" },
        { "path": "$HOME/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPCONFIG/**" },
        { "path": "$TEMP/**" }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$VIDEO/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPCONFIG/**" },
        { "path": "$TEMP/**" }
      ]
    }
  ]
}
